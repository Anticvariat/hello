<%= form_with url: about_me_index_path do |form| %>
<h1>Contact Me</h1>

<h2>
	<div><%= form.label "Name"%><br>
		 <%= form.text_field :first_name, value: (current_user.first_name if user_signed_in?), required: true %><br>
	</div>
	<div><%= form.label "Email" %><br>
		 <%= form.text_field :email, value: (current_user.email if user_signed_in?), required: true %><br>
	</div>
	<div><%= form.label "Message" %><br>
		 <%= form.text_area :message_body,  required: true %>
	</div>
	<%= form.submit "Отправить сообщение"%>
</h2>
<% end %> 
