<%= form_with url: about_me_index_path do |f| %>
<body>
<h1 class="mid">Написать мне</h1>
<main class="form-contact w-100 m-auto text-center">
  <form>

    <div class="form-group">
      <label class="label">Имя</label>
      <%= f.text_field :first_name, type: 'first_name', class: 'form-control', value: (current_user.first_name if user_signed_in?), required: true %>
    </div>

    <div class="form-group">
      <label class="label">Email</label>
      <%= f.email_field :email, autocomplete: 'email', type: 'email', class: 'form-control', value: (current_user.email if user_signed_in?), required: true %>
    </div>

    <div class="form-group">
      <label class="label">Сообщение</label>
      <%= f.text_area :message_body, class: 'form-control', placeholder: 'Ваше сообщение', rows: '3', required: true %>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit" style="margin-top: 10px;">Отправить</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
  </form>

</main>
</body>
  <% end %>
