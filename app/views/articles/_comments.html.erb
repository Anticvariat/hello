<%= form_with model: [ article, article.comments.build ] do |form| %>
<% if user_signed_in? %>
<h2 class="mid title">Оставить комментарий</h2>
<div class="container">
  <div class="row align-items-center">
    <#% commenter = @comment.user_id.first_name %>
      <%= form.hidden_field :commenter, value: current_user.first_name %>
    <div class="col-7 padding-5">
      <%= form.text_field :body, class: 'form-control', rows: '3', placeholder: 'Ваш комментарий', required: true %>
    </div>
    <div class="col-5 padding-5">
      <button class="w-100 btn btn-primary" type="submit">Отправить</button>
    </div>
  </div>
</div>
<hr>
<% end %>
<h2 class="mid title" style="margin: 10px; font">Комментарии</h2>
<% if article.comments.count > 0 %>
  <div class="mid" style="padding-bottom: 100px;">
<% article.comments.each do |comment| %>
    <% if comment.commenter != nil %>
      <%= comment.commenter %>: <%= comment.body %><br>
      
    <% end %>
<% end %>
<% else %>
  <div class="mid grey-small-text" style="text-align: center; float: center;">пока что ничего нет</div>
<% end %>
</div>



<% end %>
