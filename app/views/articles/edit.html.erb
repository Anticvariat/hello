<% if current_user.id == @article.user_id %>
<h1 class="mid">Редактирование статьи</h1>
<body>
  <main class="form-edit-article w-100 m-auto text-center">
	<%= form_with model: @article do |form| %>
  	<div>
        <div class="form-floating">
      <%= form.text_field :title, type: "title", class: "form-control bottom-0", id: "article_title", required: true  %>
      <label for="floatingPassword">Название</label>
    </div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>

    <div class="form-group">
    	<%= form.text_area :body, type: "body", class: "form-control top-0-last", id: "article_body", rows: "3", placeholder: "Содержание", required: true %>
  	</div>
  </div>


<div class="form-floating select">
  <%= form.select :status, [['Публичный', :public], ['Черновик', :draft]], class: "form-select", id: "floatingSelect" %>
</div>


    <button class="w-100 btn btn-lg btn-primary" type="submit">Сохранить</button>
<% end %>
  </main>

</body>
<% else %>
<div class="notice text-center fixed-bottom">Access denied</div>
<h1 class="mid">Редактирование недоступно</h1>
<% end %>

<div class="notice text-center fixed-bottom">
      <% @article.errors.full_messages_for(:title).each do |message| %>
      <%= message %>
    <% end %>

      <% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>