<% if @article.draft? %>
  <% if user_signed_in? && current_user.id == @article.user_id %>
    <hr>
    <h1 class="article-title"><%= @article.title %></h1>
    <p class="blog-post-status">Статус: черновик</p>
    <hr>
    <div class="blog-post">
        <div><%= @article.body %></div><hr>
        <%= link_to 'К моим статьям', articles_path %><br>
    </div>
  <% else %>
    <div class="notice text-center fixed-bottom">Access denied</div>
    <h1 class="mid">Содержимое недоступно</h1>
  <% end %>
<% else %>
  <h1 class="article-title"><%= @article.title %></h1>
  <div class="blog-post">
  <div><%= simple_format(@article.body) %></div>
  </div>
<% end %>
<hr>

<h2 class="mid title">Оставить комментарий</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
<div class="container">
  <div class="row align-items-center">
    <div class="col padding-5">
      <%= form.text_field :commenter, value: (current_user.first_name if user_signed_in?), class: 'form-control', placeholder: 'Имя', required: true %>
    </div>
    <div class="col-8 padding-5">
      <%= form.text_field :body, class: 'form-control', rows: '3', placeholder: 'Ваш комментарий', required: true %>
    </div>
    <div class="col padding-5">
      <button class="w-100 btn btn-primary" type="submit">Отправить</button>
    </div>
  </div>
</div>
<hr>
<h2 class="mid title" style="margin: 10px; font">Комментарии</h2>
<% if @article.comments.count > 0 %>
  <div class="mid" style="padding-bottom: 100px;">
<% @article.comments.each do |comment| %>
    <% if comment.commenter != nil %>
    <%= comment.commenter %>: <%= comment.body %><br>
    <% end %>
<% end %>
<% else %>
<div class="mid grey-small-text" style="text-align: center; float: center;">пока что ничего нет</div>
<% end %>
</div>



  <% end %>