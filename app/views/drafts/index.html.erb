<h1>Articles#drafts</h1>

<ul>
  <% @articles.each do |article| %>
  <% if current_user.id == article.user_id %>
    <% unless !article.draft? %>
      <li>
      	<a href="<%= article_path(article) %>/edit">
        <%= article.title %>
      </li>
    <% end %>
        <% end %>
  <% end %>



</ul>
<%= link_to "Домой", root_path %>