<h1>Home#index</h1>
<% if user_signed_in? %>
    <span>Здравствуйте, <%= current_user.first_name%> <%= current_user.last_name%></span><br>
    <span>Почта: <%= current_user.email%></span><br>
    <%= link_to 'Редактировать', edit_user_registration_path, :class => 'navbar-link' %> |
    <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
    <p>
    <a href="/articles/">Мои статьи</a> |
    <a href="/drafts/">Черновики</a>
	</p>
<% else %>
    <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
<% end %>

<h2>Articles</h2>
<ul>
  <% @articles.each do |article| %>
    <% unless article.draft? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>
