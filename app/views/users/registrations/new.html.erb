<h1 class="mid">Регистрация</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>

<main class="form-signup w-100 m-auto">
  <form>
    <div class="form-group">
      <label class="label">Email</label>
      <%= f.email_field :email, autocomplete: 'email', type: 'email', class: 'form-control', id: 'email', placeholder: 'example@example.com' %>

    </div>
    <div class="form-group">
      <label class="label">Пароль</label>
      <%= f.password_field :password, type: 'password', class: 'form-control', id: 'password', placeholder: 'password' %>
    </div>
    <div class="form-group">
      <label class="label">Подтверждение пароля</label>
      <%= f.password_field :password_confirmation, type: 'password', class: 'form-control', id: 'password_confirm', placeholder: 'password' %>
    </div>
    <div class="form-group">
      <label class="label">Имя</label>
      <%= f.text_field :first_name, type: 'first_name', class: 'form-control', id: 'first_name', placeholder: 'Ivan' %>
    </div>
    <div class="form-group">
      <label class="label">Фамилия</label>
      <%= f.text_field :last_name, type: 'last_name', class: 'form-control', id: 'last_name', placeholder: 'Ivanov' %>
    </div>
    <div class="text-center">
      <button class="w-100 btn btn-lg btn-primary " type="submit" id="signup-button">Зарегистрироваться </button>
      <%= render 'users/shared/links' %>
      <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
    </div>

  </form>

</main>
    <%= render 'users/shared/error_messages', resource: resource %>
<% end %>

<%= javascript_pack_tag 'reg_validations' %>
