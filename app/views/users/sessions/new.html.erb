<h1 class="mid">Вход</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<main class="form-signin w-100 m-auto">
  <form>

    <div class="form-group">
      <label class="label">Email</label>
      <%= f.email_field :email, autocomplete: 'email', type: 'email', class: 'form-control', id: 'user_email', placeholder: 'example@example.com' %>
    </div>
    <div class="form-group">
      <label class="label">Пароль</label>
      <%= f.password_field :password, type: 'password', class: 'form-control', id: 'user_password', placeholder: 'password' %>
    </div>

<div class="actions text-center">
  <%= f.submit 'Войти', class: 'w-100 btn btn-lg btn-primary', type: 'submit' %>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label 'Запомнить' %>
        <% end %><br>
    <%= render 'users/shared/links' %>
    <%= render 'users/shared/error_messages', resource: resource %>
    <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
  </form>
</div>
</main>

  <% end %>
