
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<body class="text-center">
    
<main class="form-signin w-100 m-auto">
  <form>
    <h1 class="h3 mb-3 fw-normal">Вход</h1>
    <div class="form-floating">
      <%= f.email_field :email, autocomplete: "email", type: "email", class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
      <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, type: "password", class: "form-control", id: "floatingPassword", placeholder: "Password" %>
      <label for="floatingPassword">Пароль</label>
    </div>


    <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
      <% if devise_mapping.rememberable? %>
        <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "Запомнить" %>
        <% end %><br>
    <%= render "users/shared/links" %>
    <%= render "users/shared/error_messages", resource: resource %>
    <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
  </form>

    </div>
</main>
</body>
  <% end %>
