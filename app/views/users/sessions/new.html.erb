
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<body>
    
<main class="form-signin w-100 m-auto text-center">
  <form>
    <h1 class="h3 mb-3 fw-normal">Вход</h1>
    <div class="field form-floating">
      <%= f.email_field :email, autocomplete: "email", type: "email", class: "form-control", id: "user_email", placeholder: "name@example.com" %>
      <label for="user_email">Email</label>
    </div>
    <div class="field form-floating">
      <%= f.password_field :password, type: "password", class: "form-control", id: "user_password", placeholder: "Password" %>
      <label for="user_password">Пароль</label>
    </div>




<div class="actions">
    <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
  </div>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label "Запомнить" %>
        <% end %><br>
    <%= render "users/shared/links" %>
    <%= render "users/shared/error_messages", resource: resource %>
    <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
  </form>

</main>
</body>

  <% end %>
